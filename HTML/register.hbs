        <div class="main-agileinfo">
            <div class="agileits-top">
                <form name="contactForm" onsubmit="return validateForm()" action="/register" method="post">
                    <div>

                        <input class="text" type="text" name="fname" placeholder="First Name" required="*required"
                            maxlength="10" minlength="3" title="Enter first name" pattern="^[a-zA-Z\s]+$">

                    </div>
                    <div>
                        <input class="text w3lpass" type="text" name="lname" placeholder="Last Name"
                            required="*required" maxlength="10" minlength="3" title="Enter last name"
                            pattern="^[a-zA-Z\s]+$">
                    </div>
                    <div>

                        <input class="text email" type="text" name="email" placeholder="Email" required="*required"
                            title="Enter email" pattern="^[a-zA-Z0-9_]{3,30}@[A-Za-z]{3,15}[.]{1}[a-zA-Z.]{2,6}$">
                    </div>
                    <div>

                        <input class="text" id="password" type="password" name="password" placeholder="Password"
                            required="*required" title="Password must contain the following: 
                    A lowercase  letter (a-z),
                    A capital (uppercase) letter (A-Z),
                    A number(0-9),
                    A special character (!@#$%^&*_),
                    Minimum 8 characters and maximum 16 characters."
                            pattern="^(?=.*[0-9])(?=.*[A-Z])(?=.*[!@#$%^&*_])[a-zA-Z0-9!@#$%^&*_]{8,16}$">
                    </div>
                    <div>
                        <input class="text w3lpass" id="confirmpassword" type="password" name="confirmpassword"
                            placeholder="Confirm Password" required="*required" title="Confirm your password"
                            pattern="^(?=.*[0-9])(?=.*[A-Z])(?=.*[!@#$%^&*_])[a-zA-Z0-9!@#$%^&*_]{8,16}$">
                    </div>
                    <div>
                        <input class="text email" type="text" name="phone" placeholder="Phone Number"
                            required="*required" pattern="^[789]{1}[0-9]{9}$" title="Enter valid phone number">
                    </div>
                    <div>
                        <input class="text email" type="text" name="age" placeholder="Age" required="*required"
                            minlength="1" maxlength="2" pattern="^[1-9]{1}[0-9]{1}$" title="Enter your age">
                    </div>
                    <div class="form-group">
                        <div class="form-group x">
                            <label class="" style="color: white;font-size:15px;font-weight:100;">Gender</label>
                        </div>
                        <div class="form-inline">
                            <label class="st">
                                <input class="text" type="radio" name="gender" value="male" required="*required">
                                Male</label>
                            <label class="st">
                                <input class="text" type="radio" name="gender" value="female">Female</label>
                            <label class="st">
                                <input type="radio" name="gender" value="other"> Other</label>
                        </div>

                    </div>
                    <div class="form-group datalist">
                        <label style="color: white;
                        font-size:15px;
                        font-weight:100;
                        ">Country</label>
                        <select name="country">
                            <option>Select</option>
                            <option value="India">India</option>
                            <option value="Australia">Australia</option>
                            <option value="United States">United States</option>
                            <option value="United Kingdom">United Kingdom</option>
                        </select>

                    </div>
                    <div class="form-group datalist">
                        <label style="color: white;
                        font-size:15px;
                        font-weight:100;
                        ">Your Role</label><br>
                        <input list="role" name="role" required="*required">
                        <datalist id="role">
                            <option value="Student">
                            <option value="Mentor">
                            <option value="Designer">
                            <option value="Artist">
                            <option value="Others">
